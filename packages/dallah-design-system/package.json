{
  "name": "@dallah/design-system",
  "version": "0.0.1",
  "repository": "https://github.com/mahmoudgalalz/dallah.git",
  "license": "MIT",
  "scripts": {
    "dev": "pnpm build:swc -w",
    "build": "pnpm build:swc && pnpm types",
    "build:swc": "pnpm copy-tailwind && swc src -d dist",
    "copy-tailwind": "shx mkdir -p dist && shx cp src/tokens.js dist/tokens.js",
    "types": "tsc --emitDeclarationOnly",
    "lint": "cross-env TIMING=1 eslint \"**/*.{ts,tsx,js,jsx}\" --fix",
    "clean": "shx rm -rf ./dist && shx rm -rf .turbo"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./*": [
      "./dist/*.js",
      "./dist/*/index.js"
    ],
    "./tailwind": {
      "require": "./dist/tailwind.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "typesVersions": {
    "*": {
      "*": [
        "src/*",
        "src/*/index"
      ],
      "tailwind": [
        "dist/tailwind.d.cts"
      ]
    }
  },
  "publishConfig": {
    "typesVersions": {
      "*": {
        "*": [
          "dist/*.d.ts",
          "dist/*/index.d.ts"
        ],
        "tailwind": [
          "dist/tailwind.d.cts"
        ]
      }
    }
  },
  "peerDependencies": {
    "next": "^14.0.0",
    "react": "^18.0.0-0",
    "react-dom": "^18.0.0-0"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.1.1",
    "@swc/helpers": "^0.5.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^1.2.1"
  },
  "devDependencies": {
    "@storybook/react": "^7.0.6",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.53",
    "@types/react": "^18.3.10",
    "chokidar": "^3.5.3",
    "eslint": "^9.16.0",
    "eslint-config-dallah": "workspace:*",
    "shx": "^0.3.4",
    "typescript": "5.0.4"
  }
}
